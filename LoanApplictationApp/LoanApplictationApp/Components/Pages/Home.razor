        </a>
        <a class="btn btn-link" title="LinkedIn" href="https://www.linkedin.com/in/eviwe-khohlombe-7a59091b9">
            <i class="bi bi-linkedin fs-4"></i>
        </a>
        <a class="btn btn-link" title="YouTube" href="">
            <i class="bi bi-youtube fs-4"></i>
        </a>
        <a class="btn btn-link" href="mailto:eviwe.khohlombe@gmail.com" title="Email">
            <i class="bi bi-envelope-at fs-4"></i>
        </a>
        <a class="btn btn-link" href="https://www.tiktok.com/eviwe.khohlombe@gmail.com" title="TikTok">
            <i class="bi bi-tiktok fs-4"></i>
        </a>
    </div>
</div>


@code{
    private bool IsRepayableClicked { get; set; } = true;
    private bool IsAffordableClicked { get; set; } = false;

    private void Repayable()
    {
        IsAffordableClicked = false;
        IsRepayableClicked = true;
    }

    private void Affordable()
    {
        IsAffordableClicked = true;
        IsRepayableClicked = false;
    }
}