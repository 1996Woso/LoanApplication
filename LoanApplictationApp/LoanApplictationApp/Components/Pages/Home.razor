@page "/"
@rendermode InteractiveServer

<div class="bg-container mt-0 w-100">
    <div class="content">
        <div class="row">
            <div class="col-md-12" style="padding-left:1rem">
                <marquee>
                    <h1>Use our Home Loan Calculator to find out how much your home loan will cost.</h1>
                </marquee>
            </div>
            @*    <div class="col-md-6">
            <button class="btn btn-secondary w-100">Want to apply for a loan</button><br /><br />
            <button class="btn btn-secondary w-100">Why Us?</button>
            </div> *@
        </div>
        <hr style="height: 0.2rem;background-color:azure" />
        <div class="card">
            <div class="card-header">
                <div class="row justify-content-center border-1">
                    <button class="btn" style="font-size:small;min-width:12rem" @onclick="Repayable"> Repayable</button> &nbsp;&nbsp;
                    <button class="btn" style="font-size:small;min-width:12rem" @onclick="Affordable"> Affordability</button>
                </div>

            </div>
            <div class="card-body p-0">
                <div class="row justify-content-center">
                    @if (IsRepayableClicked)
                    {
                        <Repayment />
                    }
                    else if (IsAffordableClicked)
                    {
                        <Affordability />
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="social-media-links">
        <a class="btn btn-link" title="Facebook" href="https://www.facebook.com/Tshikana E">
            <i class="bi bi-facebook fs-4"></i>
        </a>
        <a class="btn btn-link" title="WhatsApp" href="">
            <i class="bi bi-whatsapp fs-4"></i>
        </a>
        <a class="btn btn-link" title="Instagram" href="">
            <i class="bi bi-instagram fs-4"></i>
        </a>
